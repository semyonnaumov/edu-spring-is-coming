<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="globalInit"
       default-destroy-method="globalDestroy">

    <bean id="triangle"
          class="com.naumov.geometry.Triangle"
          init-method="myInit"
          destroy-method="myDestroy">
        <property name="pointA" ref="pointA"/>
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>

    <bean id="pointA" class="com.naumov.geometry.Point" scope="prototype">
        <property name="x" value="${pointA.x}"/>
        <property name="y" value="${pointA.y}"/>
    </bean>

    <bean id="pointB" class="com.naumov.geometry.Point" scope="prototype">
        <property name="x" value="3"/>
        <property name="y" value="5"/>
    </bean>

    <bean id="pointC" class="com.naumov.geometry.Point" scope="prototype">
        <property name="x" value="-5"/>
        <property name="y" value="10"/>
    </bean>

    <bean class="com.naumov.geometry.SimpleBeanPostProcessor"/>
    <bean class="com.naumov.geometry.SimpleBeanFactoryPostProcessor"/>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="geometry.properties"/>
    </bean>
</beans>